{
    "env": {
        "commonjs": true,
        "es6": true,
        "node": true,
        "mocha": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
        "ecmaVersion": 2017,
        "sourceType": "module"
    },
    "rules": {
        "no-console": 0,
        "no-empty": [1, { "allowEmptyCatch": true }],
        "indent": ["error", 4, { "SwitchCase": 1, "VariableDeclarator": 2, "MemberExpression": 0 }]
    }
}